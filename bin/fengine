#!/usr/bin/env node

'use strict';

// set process title
process.title = 'fengine';

var fengine = require('../');
var chalk = require('chalk');
var utils = require('../lib/utils');
var program = require('commander');
var pkg = require('../package.json');

program
  .version(pkg.version)
  .description(chalk.reset.cyan(pkg.description))
  .option('-p, --port <port>', 'set the port of fengine server', Number);

program.on('--help', function() {
  process.stdout.write(`\n\n  Documentation can be found at ${ chalk.reset.magenta(pkg.homepage) }.\n`);
});

program.parse(process.argv);

console.log(utils.typeOf(program.port), utils.isLegalPort(program.port));
