#!/usr/bin/env node

'use strict';

// set process title
process.title = 'fengine';

var Tilda = require('tilda');
var fengine = require('../');
var colors = require('colors/safe');
var pkg = require('../package.json');

// set commander
new Tilda({
  name: 'fengine',
  version: pkg.version,
  description: colors.reset.cyan.bold(pkg.description),
  documentation: colors.reset.magenta.bold(pkg.homepage),
  examples: ['fengine', 'fengine -p 80', 'fengine --port 80']
}).option([
  {
    name: 'port',
    type: 'number',
    opts: ['p', 'port'],
    desc: 'Set the port of fengine server.'
  }
]).main(function(tilda) {
  fengine.run(tilda.options.port.value);
});
